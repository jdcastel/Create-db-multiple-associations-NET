@model JDRA5.Models.ShowWithInfoViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>

        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="" style="max-width: 150px; max-height: 150px;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coordinator)
        </dd>

        <dt class="col-sm-2">
            Cast<br />
            <span class="badge rounded-pill text-bg-secondary">@Html.DisplayFor(model => model.Actors.Count) actors</span>
        </dt>

        <dd class="col-sm-10">
            @if (Model.Actors.Count == 0)
            {
                <span>(none)</span>
            }
            else
            {
                foreach (var item in Model.Actors)
                {
                    <span>@item.Name</span><br />

                }
            }
        </dd>

        <dt class="col-sm-2">
            Episodes<br />
            <span class="badge rounded-pill text-bg-secondary">@Html.DisplayFor(model => model.Episodes.Count) episodes</span>
        </dt>

        <dd class="col-sm-10">
            @if (Model.Episodes.Count == 0)
            {
                <span>(none)</span>
            }
            else
            {
                foreach (var item in Model.Episodes)
                {
                    <span>@item.Name</span><br />

                }
            }
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Clerk"))
    {
    <p>
        @Html.ActionLink("Add New Episode", "Create", new { id = Model.Id })
    </p>
}
    @Html.ActionLink("Back to List", "Index")


